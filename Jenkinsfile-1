pipeline {
  agent {
    docker { image 'bridgecrew/checkov:latest' }
  }
  stages {
    stage('check files') {
      steps {
        sh 'ls '
      }
    }
    stage('checkov version') {
      steps {
        sh 'checkov --version'
      }
    }
 
    stage('checkov analyze') {
      steps {
        sh 'checkov -d project/'
      }
    }
  }
}
